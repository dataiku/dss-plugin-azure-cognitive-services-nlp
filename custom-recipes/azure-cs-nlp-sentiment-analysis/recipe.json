{
    "meta": {
        "label": "Sentiment Analysis",
        "description": "Estimate the sentiment polarity of a text (positive, negative, neutral)",
        "icon": "icon-star-half-full",
        "iconColor": "blue"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input-dataset",
    "inputRoles": [
        {
            "name": "input-dataset",
            "label": "Input Dataset",
            "description": "Dataset containing the data to analyze",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output-dataset",
            "label": "Output Dataset",
            "description": "Dataset containing the enriched data from the Azure API",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "connection_info",
            "label": "Azure Connection",
            "type": "PRESET",
            "parameterSetId" : "azure-cs-nlp-connection-info",
            "mandatory" : true
        },
        {
            "name": "text-column",
            "label": "Text Column",
            "type": "COLUMN",
            "columnRole": "input-dataset",
            "mandatory": true
        },
        {
            "name": "language-column",
            "label": "Language Column",
            "type": "COLUMN",
            "columnRole": "input-dataset",
            "description":"Optional. Name of the column storing the language in ISO 639-1 format",
            "mandatory": false
        },
        {
            "name": "sentiment-scale",
            "label": "Sentiment scale",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "value": "binary",
                    "label": "negative / positive"
                },
                {
                    "value": "ternary",
                    "label": "negative / neutral / positive"
                },
                {
                    "value": "1to5",
                    "label": "highly negative / negative / neutral / positive / highly positive"
                },
                {
                    "value": "continuous",
                    "label": "Number between 0 (highly negative) and 1 (highly positive)"
                }
            ],
            "defaultValue": "ternary"
        }
    ]
}
