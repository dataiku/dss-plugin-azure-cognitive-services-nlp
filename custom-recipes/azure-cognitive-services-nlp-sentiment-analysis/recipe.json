{
    "meta": {
        "label": "Sentiment Analysis",
        "description": "Analyze the sentiment polarity (positive, negative, neutral) of a text",
        "icon": "icon-DKU_azure-cognitive-services icon-cloud"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataset containing the data to analyze",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "description": "Dataset containing the enriched data from the Azure API",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "connection_info",
            "label": "Azure Connection",
            "type": "PRESET",
            "parameterSetId" : "azure-cs-nlp-connection-info",
            "mandatory" : true
        },
        {
            "name": "text_column",
            "label": "Text Column",
            "type": "COLUMN",
            "columnRole": "input_dataset",
            "mandatory": true
        },
        {
            "name": "language",
            "label": "Language",
            "type": "STRING",
            "description":"in ISO 639-1 format",
            "mandatory": false
        },
        {
            "name": "sentiment_scale",
            "label": "Sentiment scale",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "value": "binary",
                    "label": "negative / positive"
                },
                {
                    "value": "ternary",
                    "label": "negative / neutral / positive"
                },
                {
                    "value": "1to5",
                    "label": "highly negative / negative / neutral / positive / highly positive"
                },
                {
                    "value": "continuous",
                    "label": "Number between 0 (highly negative) and 1 (highly positive)"
                }
            ],
            "defaultValue": "ternary"
        },
        {
            "name": "should_output_raw_results",
            "label": "Output Raw Response?",
            "type": "BOOLEAN"
        }
    ]
}
